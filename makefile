MAKEFILEVERSION=2.0
#
# 
#
# ######################################################################################


PKGNAME=beamertheme-npbt
SRC=src
BUILD=build
PKGBUILD=$(BUILD)/$(PKGNAME)

build:
	mkdir $(PKGBUILD)
	cp -R $(SRC)/* $(PKGBUILD)
	zip 

clean:
	rm -r $(PKGBUILD)

# --------------------------------------------------------------------------------------
#
.PHONY: build clean

# --------------------------------------------------------------------------------------
# EoF
# ######################################################################################
