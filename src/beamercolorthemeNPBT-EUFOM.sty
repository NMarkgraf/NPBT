\mode<presentation>
% ---------------------------------------------------------------------------

% ---------------------------------------------------------------------------
% Set Path to images
% ---------------------------------------------------------------------------
\def\imagepath{images/NPBT-eufom-}
\updateNPBTimagespaths{}
\updateNPBTimages{}

% ---------------------------------------------------------------------------
\definecolor{eufomred}{HTML}{8E000F}
\definecolor{EUFOM}{HTML}{8E000F}
\definecolor{EUFOMTitelColor}{HTML}{8E000F}
\definecolor{EUFOMInstituteColor}{HTML}{3A1518}
\definecolor{EUFOMAuthorColor}{HTML}{1C1C1C}
\definecolor{EUFOMSubTitelColor}{HTML}{4CB7AD}
\definecolor{EUFOMFirmColor}{HTML}{262626} 
% NEEDS FIXING:
\definecolor{EUFOMForgroundColor}{HTML}{262626}
\definecolor{EUFOMWhiteColor}{HTML}{FFFFFF}
\definecolor{EUFOMFrametitelColor}{HTML}{A10010}
\definecolor{EUFOMFrametitelInverseColor}{HTML}{FFFFFF}
\definecolor{EUFOMSectionHeadlineColor}{HTML}{717D87}
\definecolor{EUFOMSectionTitelColor}{HTML}{A10010}% sollte eigentlich sein: {00998A}
\definecolor{EUFOMSectionNumberColor}{HTML}{32373D}% oder: {262927}
\definecolor{EUFOMNearBlack}{HTML}{102030}



% ---------------------------------------------------------------------------
\setbeamercolor*{structure}{fg=eufomred,bg=softred}
\setbeamercolor{structure}{fg=EUFOM}

% ---------------------------------------------------------------------------
% part title page
% ---------------------------------------------------------------------------
\setbeamercolor{part title}{fg=EUFOMTitelColor}

% ---------------------------------------------------------------------------
% Colors & Fonts setting for: titlepage
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{title in titlepage}{fg=EUFOMTitelColor}
\setbeamercolor{institute in titlepage}{fg=EUFOMInstituteColor}
\setbeamercolor{author in titlepage}{fg=EUFOMAuthorColor}
\setbeamercolor{subtitle in titlepage}{fg=EUFOMSubTitelColor}
\setbeamercolor{firm in titlepage}{fg=EUFOMFirmColor}
%
% fonts
%
\setbeamerfont{institute in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{firm in titlepage}{size=\large, family=\sffamily, series=\bfseries}
\setbeamerfont{title in titlepage}{size=\LARGE, family=\sffamily, series=\bfseries}
\setbeamerfont{subtitle in titlepage}{size=\LARGE, family=\sffamily, series=\bfseries}
\setbeamerfont{author in titlepage}{size=\large, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% section title page
% ---------------------------------------------------------------------------
\setbeamercolor{section name}{fg=EUFOMTitelColor}

% ---------------------------------------------------------------------------
% subsection title page
% ---------------------------------------------------------------------------
\setbeamercolor{subsection name}{fg=EUFOMTitelColor}

% ---------------------------------------------------------------------------
% Colors & Font setting for: header
% ---------------------------------------------------------------------------
%
% colors
%
\setbeamercolor{myheader}{fg=darkdray}
\setbeamercolor{section in head}{parent=myheader}
\setbeamercolor{subsection in head}{parent=myheader}
\setbeamercolor{section in head}{parent=myheader, fg=EUFOMSectionHeadlineColor}
\setbeamercolor{frametitle in head}{bg=EUFOMWhiteColor, fg=EUFOMFrametitelColor}
\setbeamercolor{frametitle in head exercise}{bg=EUFOMFrametitelColor, fg=EUFOMFrametitelInverseColor}
%
% fonts
%
\setbeamerfont{frametitle in head}{size=\Large, family=\sffamily, series=\bfseries}
\setbeamerfont{section in head}{size=\large, family=\sffamily, series=\mdseries}
\setbeamerfont{section in head exercise}{parent=section in head}
\setbeamercolor{myheader}{fg=darkgray}

% ---------------------------------------------------------------------------
% footer
% ---------------------------------------------------------------------------
\setbeamercolor{footer}{fg=normal text.fg}
\setbeamercolor{author in footer}{parent=footer}
\setbeamercolor{date in footer}{parent=footer}
\setbeamercolor{title in footer}{parent=footer}
\setbeamercolor{framenumber in footer}{parent=footer}

% ---------------------------------------------------------------------------
\mode<all>
