\mode<presentation>
% ---------------------------------------------------------------------------

\def\imagepath{images/FOM/}

% ---------------------------------------------------------------------------
\definecolor{fomgreen}{rgb}{0.58,0.77,0.75}
\definecolor{FOM}{rgb}{0,0.67,0.6}
\definecolor{FOMTitelColor}{RGB}{0,153,138}

% ---------------------------------------------------------------------------
\setbeamercolor*{structure}{fg=fomgreen,bg=softgreen}
\setbeamercolor{structure}{fg=FOM}

% ---------------------------------------------------------------------------
% title
% ---------------------------------------------------------------------------
\setbeamercolor{title in titlepage}{fg=FOMTitelColor}
\setbeamercolor{institute in titlepage}{fg=lightgray}
\setbeamercolor{author in titlepage}{fg=darkgray}

% ---------------------------------------------------------------------------
% part title page
% ---------------------------------------------------------------------------
\setbeamercolor{part title}{fg=FOMTitelColor}

% ---------------------------------------------------------------------------
% section title page
% ---------------------------------------------------------------------------
\setbeamercolor{section name}{fg=FOMTitelColor}
\setbeamercolor{section title}{fg=FOMTitelColor}
% ---------------------------------------------------------------------------
\setbeamerfont{section name}{size=\Large, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% subsection title page
% ---------------------------------------------------------------------------
\setbeamercolor{subsection name}{fg=FOMTitelColor}
\setbeamercolor{subsection title}{fg=FOMTitelColor}
% ---------------------------------------------------------------------------
\setbeamerfont{subsection name}{size=\large, family=\sffamily, series=\bfseries}

% ---------------------------------------------------------------------------
% header
% ---------------------------------------------------------------------------
\setbeamercolor{myheader}{fg=darkgray}
\setbeamercolor{section in head}{parent=myheader}
\setbeamercolor{subsection in head}{parent=myheader}
\setbeamercolor{frametitle in head}{parent=myheader, fg=FOMTitelColor}

% ---------------------------------------------------------------------------
% footer
% ---------------------------------------------------------------------------
\setbeamercolor{footer}{fg=normal text.fg}
\setbeamercolor{author in footer}{parent=footer}
\setbeamercolor{date in footer}{parent=footer}
\setbeamercolor{title in footer}{parent=footer}
\setbeamercolor{framenumber in footer}{parent=footer}



%
% Ã„nderungen von SES:
%
\def\titleboxwidth{0.8\myPaperWidth}

\setbeamerfont{title in titlepage}{size=\Huge, family=\sffamily, series=\bfseries}
\setbeamerfont{author in titlepage}{size=\large, family=\sffamily, series=\mdseries}
\setbeamerfont{institute in titlepage}{size=\LARGE, family=\sffamily, series=\mdseries}

\setbeamerfont{section name}{size=\small, family=\sffamily, series=\bfseries}
\setbeamerfont{subsection name}{size=\small, family=\sffamily, series=\bfseries}

\setbeamerfont{section in head}{size=\large, family=\sffamily, series=\mdseries}
\setbeamerfont{subsection in head}{size=\tiny, family=\sffamily, series=\mdseries}
\setbeamerfont{frametitle in head}{size=\tiny, family=\sffamily, series=\mdseries}
\setbeamerfont{myheader in head}{size=\tiny, family=\sffamily, series=\mdseries}


\boolfalse{showAuthorInFootline}   %
\boolfalse{showTitleInFootline}    %
\boolfalse{showDateInFootline}     %

% Set color for author in footline and header to darkgray on white:
\setbeamercolor{author in head/foot}{fg=darkgray, bg=white}

% TOC umdefinieren
\setbeamertemplate{section in toc}[ball unnumbered]

% ---------------------------------------------------------------------------
\mode<all>
