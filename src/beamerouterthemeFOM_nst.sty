%
% Frame title template:
%
\setbeamertemplate{frametitle}{%
	\leavevmode
  	\hbox{%
  		\begin{beamercolorbox}[ht=6ex,leftskip=.25cm,wd=\paperwidth]{frametitle}%		
        \begin{tikzpicture}[remember picture, overlay]
          % Frametitle
            \node[anchor=west, yshift=-.7cm, inner sep=10pt] at (current page.north west){%
              {%
              \usebeamercolor[fg]{frametitle in head}%
              \usebeamerfont{frametitle in head}%
              \insertframetitle
              }%
            };
          % Logo
          \node[shift={(\logoxshift,\logoyshift)},inner sep=0pt] at (current page.north east){%
            \includegraphics[%
                  width=\logowidth,%
                  height=\logoheight%
              ]{\logoimage}%
          };% 
          % Linie
          \node[anchor=west, inner sep=8pt, yshift=-\logoheight-3pt] at (current page.north west){
                  \includegraphics[%
                      width=0.90\paperwidth%
                  ]{\lineimage}%
              };
        \end{tikzpicture}%
      \end{beamercolorbox}
  }%
}
% ---------------------------------------------------------------------------

% ---------------------------------------------------------------------------
%
% Abschalten der Section und Subsection Framespages
%
\setbeamertemplate{section page}{}
\setbeamertemplate{subsection page}{}

