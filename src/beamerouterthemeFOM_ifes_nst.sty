% ---------------------------------------------------------------------------
%
% Frame title template:
%
\setbeamertemplate{frametitle}{%
	\leavevmode
  	\hbox{%
  		\begin{beamercolorbox}[ht=6ex,leftskip=.25cm,wd=\paperwidth]{frametitle}%		
        \begin{tikzpicture}[remember picture, overlay]
          % Frametitle
            \node[anchor=west, yshift=-1.1cm, inner sep=10pt] at (current page.north west){%
              {%
              \usebeamercolor[fg]{frametitle in head}%
              \usebeamerfont{frametitle in head}%
              \insertframetitle
              }%
            };
          % Logo
          \node[shift={(\logoxshift,\logoyshift)},inner sep=0pt] at (current page.north east){%
            \includegraphics[%
                  width=\logowidth,%
                  height=\logoheight%
              ]{\logoimage}%
          };% 
          % Linie
          \node[anchor=west, inner sep=8pt, yshift=-\logoheight-3pt] at (current page.north west){
                \includegraphics[%
                  width=0.78\paperwidth%
                ]{\lineimage}%
          };
        \end{tikzpicture}%
      \end{beamercolorbox}
  }%
}
% ---------------------------------------------------------------------------


% ---------------------------------------------------------------------------
%
% Footline template
%
\setbeamertemplate{footline}{% Skip first frame == Title frame !!!
  \ifthenelse{\equal{\insertframenumber}{1}}{%
  }{%
        \hspace*{10pt}%
        \includegraphics[%
           width=0.9\paperwidth%
        ]{%
           \lineimage%
        }

        \vspace*{1em}

        \leavevmode%

        \hbox{%
            \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.25ex,dp=1ex,left]{copyright in footer}%
                \usebeamerfont{copyright in footer}%
                \hspace*{10pt}%
                \fontsize{7}{10}%
                \selectfont%
                \insertdate 
            \end{beamercolorbox}%
            \begin{beamercolorbox}[wd=.849999\paperwidth,ht=2.25ex,dp=1ex,center]{title in footer}%
                \usebeamerfont{title in footer}%
                \fontsize{7}{10}%
                \selectfont%
				\insertauthor \, $|$ \, \hypersetup{hidelinks}\insertshorttitle \phantom{©}
            \end{beamercolorbox}%
            \begin{beamercolorbox}[wd=.05\paperwidth,ht=2.25ex,dp=1ex,right]{framenumber in footer}%
                \usebeamerfont{framenumber in footer}%
                \fontsize{7}{10}%
                \selectfont%
                \phantom{©}\insertframenumber{} \hspace*{2ex}
            \end{beamercolorbox}%
         }%
        \vspace*{1em}
  }
}
